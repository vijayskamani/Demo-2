							        '<customTabListAdditionalFields>Start_Time__c</customTabListAdditionalFields>'+
							        '<customTabListAdditionalFields>UPDATEDBY_USER</customTabListAdditionalFields>'+
							        '<excludedStandardButtons>New</excludedStandardButtons>'+
