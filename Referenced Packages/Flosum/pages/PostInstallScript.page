							    '<pluralLabel>Commits</pluralLabel>'+
							    '<searchLayouts>'+
							        '<customTabListAdditionalFields>Commit_Name__c</customTabListAdditionalFields>'+
							        '<customTabListAdditionalFields>Description__c</customTabListAdditionalFields>'+
