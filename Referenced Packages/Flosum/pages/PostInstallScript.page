							        '<customTabListAdditionalFields>CREATED_DATE</customTabListAdditionalFields>'+
							        '<excludedStandardButtons>New</excludedStandardButtons>'+
							    '</searchLayouts>'+
							    '<sharingModel>ReadWrite</sharingModel>'+
